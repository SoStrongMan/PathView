<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <Button
        android:id="@+id/btn_attr_map"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/btn_attr_map" />

    <Button
        android:id="@+id/btn_pie_map"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/btn_pie_map" />

    <Button
        android:id="@+id/btn_tai_chi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/btn_tai_chi" />

    <Button
        android:id="@+id/btn_finger_map"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/btn_finger_map" />
</LinearLayout>
